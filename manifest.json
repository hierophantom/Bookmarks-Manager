{
  "manifest_version": 3,
  "name": "Bookmark Manager (Spec)",
  "version": "0.2.0",
  "description": "A bookmark manager extension implementing the provided spec (minimal scaffold).",
  "permissions": ["bookmarks", "tabs", "tabGroups", "storage", "scripting", "history", "downloads", "management"],
  "host_permissions": ["http://*/", "https://*/"],
  "background": {
    "service_worker": "service-search-engine/bridge.js",
    "type": "module"
  },
  "chrome_url_overrides": {
    "newtab": "core/main.html"
  },
  "commands": {
    "toggle-search": {
      "suggested_key": { "default": "Ctrl+Shift+E", "mac": "Command+Shift+E" },
      "description": "Toggle universal search overlay"
    }
  },
  "action": {
    "default_title": "Bookmark Manager"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["service-search-engine/content-overlay/overlay.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
