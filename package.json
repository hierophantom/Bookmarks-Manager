{
  "name": "bookmark-manager",
  "version": "1.0.0",
  "description": "Chrome extension for managing bookmarks with a modern UI",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/dom": "^9.3.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "services/**/*.js",
      "utils/storage.js",
      "utils/undo.js",
      "utils/undo-persist.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".min.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ]
  },
  "keywords": [
    "bookmark",
    "chrome-extension",
    "productivity"
  ],
  "author": "Lior Mazza",
  "license": "MIT"
}
